@model MaterialAssetsWarehouse.Models.OrderFormViewModel

<h2>Order Form</h2>

<form asp-controller="Order" asp-action="SubmitOrder" method="post">

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label for="ItemName">Item Name:</label>
        <input asp-for="ItemName" class="form-control" />
    </div>

    <div class="form-group">
        <label for="UnitOfMeasurement">Unit of Measurement:</label>
        <input asp-for="UnitOfMeasurement" class="form-control" />
    </div>

    <div class="form-group">
        <label for="Quantity">Quantity:</label>
        <input asp-for="Quantity" class="form-control" />
    </div>

    <div class="form-group">
        <label for="PriceWithoutVAT">Price without VAT:</label>
        <input asp-for="PriceWithoutVAT" class="form-control" />
    </div>

    <div class="form-group">
        <label for="Comment">Comment:</label>
        <input asp-for="Comment" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
    <a asp-controller="Item" asp-action="Items" class="btn btn-secondary">Cancel</a>
</form>